<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Title" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item> <!-- White -->
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/button</item> <!-- Udacity Orange -->
    </style>

    <style name="Button.important">
        <!-- Udacity Orange but redder -->
        <item name="android:background">@drawable/button_important</item>
    </style>

</resources>
